# DivFlow Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# PINATA IPFS CONFIGURATION (RECOMMENDED)
# ===========================================
# Get these from https://app.pinata.cloud/developers/api-keys
# Use JWT for server-side uploads (more secure)
PINATA_JWT=your_pinata_jwt_here

# Optional: Group ID to organize property documents
# Create a group in Pinata dashboard, then copy the ID
PINATA_GROUP_ID=

# ===========================================
# LEGACY PINATA KEYS (FALLBACK ONLY)
# ===========================================
# These are exposed in browser - use JWT above instead
# Only needed if server-side route is not working
NEXT_PUBLIC_PINATA_API_KEY=
NEXT_PUBLIC_PINATA_SECRET=

# ===========================================
# SENSITIVE DATA ENCRYPTION
# ===========================================
# Secret key for encrypting Aadhaar/PAN before storing in IPFS
# IMPORTANT: Generate a strong random secret (min 32 characters)
# This ensures that even if IPFS CID leaks, sensitive data is protected
# Example: openssl rand -hex 32
ENCRYPTION_SECRET=your_strong_random_secret_here

# ===========================================
# FIREBASE CONFIGURATION (REALTIME CHAT)
# ===========================================
# Get these from Firebase Console > Project Settings > Your Apps
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_DATABASE_URL=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# ===========================================
# ALCHEMY RPC (BLOCKCHAIN)
# ===========================================
# Get from https://www.alchemy.com/
NEXT_PUBLIC_ALCHEMY_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_KEY
